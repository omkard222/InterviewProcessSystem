<%=form_for @dutable do |f| %>


<% if !@dutable.persisted? %>

<div class="container">
  <h1>Delivery Unit Information</h1>
  <div class="row">
    <div class="col-md-8" style="display: inline;">

      <p>
      </p>
      <div class="bold-inline" style="font-weight:900;" >
        <label for="dutable_DU_Name" style="font-weight:900;" >Deliveryunit Name:</label>
      </div>
      <input type="text" name="dutable[du_name]" id="dutable_du_name" required>

      <p>
      </p>
      <p>
      </p>

      <div class="bold-inline" style="font-weight:900;">
        <label for="dutable_Description" style="font-weight:900;" >Description:</label>
      </div>

      <textarea name="dutable[du_description]" id="dutable_du_description" required></textarea>



    </div>
  </div>
<%end%>

<hr>


<table class = 'table'>
  <thead>
    <tr>
      <th> Project Name </th>

      <th> Description </th>
        <th></th>
    </tr>
  </thead>

  <tbody class ='tasks'>
    <%=f.fields_for :projects do |b|%>
     <%= render 'project_fields', :f =>b %>
    <%end%>

  </tbody>

</table>
<center>
<%= link_to_add_association 'Add project', f , :projects , class: "btn btn-success",
 data: {association_insertion_node: '.tasks', association_insertion_method: :append}%>
<center>
<div class ='form-actions'>

  <%= f.submit "Save", class: "btn btn-primary" %>

</div>
<%end%>

</div>
