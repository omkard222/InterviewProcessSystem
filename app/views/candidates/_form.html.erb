<%= form_for [@requirement, @candidate] do |f| %>
  <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@candidate.errors.count, "error")} prohibited this candidate from being saved:" %>
      </h2>
      <ul>
        <% @candidate.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :contact %>
    <%= f.text_field :contact %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
  <%= f.label :resume %><br>
  <%= f.file_field :resume %>
  </div>

  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
