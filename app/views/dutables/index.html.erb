

  <Center><h1>Delivery Units</h1></center>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Sr No.</th>
        <th>Details</th>
        <th>Delivery Unit Name</th>

        <th>No of Projects</th>
        <th></th>
        <!-- <th></th> -->

      </tr>
    </thead>
    <tbody>
      <% @dutables.each_with_index do |d, i| %>
        <tr>
          <td>
            <%=i + 1 %>
          </td>

          <td class="center">
            <div class="action-buttons">
              <a href="<%= dutables_projects_get_project_list_url(id: d.id)%>" class="green bigger-140 show-details-btn" title="Show Details" data-remote=true >
                <i class="ace-icon fa fa-angle-double-down"></i>
                <span class="sr-only">Details</span>
              </a>
            </div>
          </td>

          <td>
            <%= d.du_name %>

          </td>

          <td>
            <%= d.projects.count %>
          </td>

          <td>
          <%= link_to 'Details', dutable_path(d), class:'btn btn-info'%>
          </td>

        </tr>

        <tr class="detail-row">
          <td colspan="12" id="DuProject-<%=d.id%>">

          </td>
      </tr>

          <!-- <td>
          <%= link_to 'Add Project',  edit_dutable_path(d), class: 'class="ace-icon fa fa-wrench  bigger-110 icon-only btn btn-warning btn-xm"'%>
          </td> -->


      <% end %>
    </tbody>
  </table>

          <script>
            $('.show-details-btn').on('click', function(e) {
            	e.preventDefault();
            	$(this).closest('tr').next().toggleClass('open');
            	$(this).find(ace.vars['.icon']).toggleClass('fa-angle-double-down').toggleClass('fa-angle-double-up');
            });
          </script>
