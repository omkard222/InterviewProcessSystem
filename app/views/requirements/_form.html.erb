<%= form_for @requirement do |f| %>
  <% if @requirement.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@requirement.errors.count, "error")} prohibited this requirement from being saved:" %>
      </h2>
      <ul>
        <% @requirement.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :position %>
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :skills %>
    <%= f.text_field :skills %>
  </div>
  <div class="field">
    <%= f.label :experience %>
    <%= f.number_field :experience %>
  </div>
  <div class="field">
    <%= f.label :salary %>
    <%= f.text_field :salary %>
  </div>
  <div class="field">
    <%= f.label :qualification %>
    <%= f.text_field :qualification %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
