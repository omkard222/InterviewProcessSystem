<div class = "row">
  <div class ="col-md-6 col-md-offset-3 form-horizontal">
        <%= form_for  [@requirement, @candidate] do |f| %>
  <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@candidate.errors.count, "error")} prohibited this candidate from being saved:" %>
      </h2>
      <ul>
        <% @candidate.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">First Name:</label>
    <input type="text" id="form-field-1" placeholder="firstname" name="candidate[first_name]" class="col-xs col-sm-5" required>

  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Last Name:</label>
    <input type="text" id="form-field-1" placeholder="lastname" name="candidate[last_name]" class="col-xs col-sm-5" required>

  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Phone No:</label>
    <input type="tel" id="form-field-1" placeholder="phone no" name="candidate[contact]" class="col-xs col-sm-5" required>

  </div>

  <div class="form-group">
      <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Email:</label>
    <input type="email" name="candidate[email]" placeholder="email" id="candidate_email" class="col-xs col-sm-5" required>
  </div>


  <div  class="form-group">
      <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Candidate Resume:</label>

      <%=f.file_field :resume%>
  </div>

  <div class="actions" >
    <%= f.submit 'Save' , class: "btn btn-primary" %>
  </div>
  <center>
<% end %>
</div>
</div>
