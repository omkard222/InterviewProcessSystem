<div class ="main-content-inner">
  <div class ="page-content">
    <div class="row">

          <div class ="col-md-6 col-md-offset-3">
        <%= form_for @requirement, html: {class: "form-horizontal"} do |f| %>
          <% if @requirement.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= "#{pluralize(@requirement.errors.count, "error")} prohibited this requirement from being saved:" %>
              </h2>
              <ul>
                <% @requirement.errors.full_messages.each do |message| %>
                  <li>
                    <%= message %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Opportunity Id </label>
						<div class="col-sm-9">
            <input class="col-xs-10 col-sm-5" type="text" name="requirement[opportunityID]" id="requirement_opportunityID" required>
						</div>
					</div>

          <div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Designation</label>
						<div class="col-sm-9">
            <input class="col-xs-10 col-sm-5" type="text" name="requirement[position]" id="requirement_position" required>
						</div>
          </div>

            <div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Job Description(Min 10 chars and Max 2000 chars)</label>
						<div class="col-sm-9">
            <textarea name="requirement[job_description]" minlength="10" maxlength="2000" id="requirement_job_description" required></textarea>
						</div>
					</div>

          <div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Job Summary(Min 10 chars and Max 500 chars)</label>
						<div class="col-sm-9">
            <textarea name="requirement[job_summary]" minlength="10" maxlength="500" id="requirement_job_summary" required></textarea>
						</div>
					</div>


					</div>

          <div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Job Description(Min 10 chars and Max 2000 chars)</label>
						<div class="col-sm-9">
            <textarea name="requirement[job_description]" minlength="10" maxlength="2000" id="requirement_job_description" required></textarea>
						</div>
					</div>

          <div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1">Job Summary(Min 10 chars and Max 500 chars)</label>
						<div class="col-sm-9">
            <textarea name="requirement[job_summary]" minlength="10" maxlength="500" id="requirement_job_summary" required></textarea>
						</div>
					</div>

          <div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Skills </label>
						<div class="col-sm-9">
              <select name="requirement[skill_id]" id="requirement_skill_id" required>
                  <option value="1">Java</option>
                  <option value="2">Front End</option>
                  <option value="3">Dot Net</option>
                  <option value="4">Ruby On Rails</option>

              </select>
						</div>
					</div>


					</div>
          <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Experience(yrs)</label>
            <div class="col-sm-9">
            <%= f.select :experience, options_for_select(0..50) %>

            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Qualification </label>
            <div class="col-sm-9">
            <input class="col-xs-10 col-sm-5" type="text" name="requirement[qualification]" id="requirement_qualification" required>
            </div>
          </div>
          <div class="actions">
            <%= f.hidden_field :project_id%>
            <%= f.submit 'Save' , class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
