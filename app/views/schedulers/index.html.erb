<h1>Listing Interviews</h1>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Candidate name</th>
      <th>Interviewer</th>
      <th>Interview Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Last Feedback</th>
      <th>Feedback Details</th>


    </tr>
  </thead>
  <tbody>
    <%  @schedulers.each do |scheduler| %>
      <tr>
        <td>
          <%= scheduler.candidate.candidate_full_name %>
        </td>

        <td>
          <%= scheduler.employee.full_name %>
        </td>

        <td>
          <%= scheduler.interview_date %>
        </td>
        <td>
          <%= scheduler.start_time %>
        </td>
        <td>
          <%= scheduler.end_time %>
        </td>
        <td>
          <%= scheduler.feedbacks.last.status rescue ''%>
        </td>
        <td>
        <%= link_to "Feedback Form", new_scheduler_feedback_path(scheduler) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
