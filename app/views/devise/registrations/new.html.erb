
<div class='row'>
  <div class='col-sm-10 col-sm-offset-1'>
    <div class='login-container'>
      <div class='center'>

        <h1><%= image_tag("ig-logo.png")%></h1>
      <center>
          <!-- <span class='red'>Interview Process</span> -->
          <h2><span class='blue' id='id-text2'>Interview Management System</span></h2>
      </center>
        <!-- <h4 class='blue' id='id-company-text'>Â©Infogain India</h4> -->
      </div>
      <div class='space-6'></div>
      <div class='position-relative'>
        <div class='login-box visible widget-box no-border' id='login-box'>
          <div class='widget-body'>
            <div class='widget-main'>
              <h4 class='header blue lighter bigger'>
                <i class='ace-icon fa fa-coffee green'></i>
                Please Enter Your Information
              </h4>
              <div class='space-6'></div>
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <fieldset>
                  <label class='block clearfix'>
                    <span class='block input-icon input-icon-right'>
                      <input autofocus="autofocus" class="form-control" type="text" name="user[name]" id="user_name" placeholder="Employee Name">

                    </span>
                  </label>
                    <label class='block clearfix'>
                      <span class='block input-icon input-icon-right'>
                        <input autofocus="autofocus" class="form-control" type="email" value="" name="user[email]" id="user_email" placeholder="Employee Email">

                      </span>
                  </label>
                  <label class='block clearfix'>
                    <span class='block input-icon input-icon-right'>

                      <select name="user[designation]" id="user_designation" required>
                          <option value="#">Select Employee Designation</option>
                          <option value="Software Engineer">Software Engineer</option>
                          <option value="HR">Human Resource</option>
                          <option value="Project Manager">Project Manager</option>
                      </select>
                    </span>
                  </label>



                  <label class='block clearfix'>
                    <span class='block input-icon input-icon-right'>
                    <input autofocus="autofocus" class="form-control" type="employee_id" value="" name="user[employee_id]" id="user_employee_id" placeholder="Employee ID">

                    </span>
                  </label>

                  <label class='block clearfix'>
                    <span class='block input-icon input-icon-right'>
                    <input autofocus="autofocus" class="form-control" type="phone_no" value="" name="user[phone_no]" id="user_phone_no" placeholder="Employee Phone">

                    </span>
                  </label>

                  </label>
                  <label class='block clearfix'>
                    <span class='block input-icon input-icon-right'>
                        <%= f.password_field :password, class: 'form-control' %>
                      <i class='ace-icon fa fa-lock'></i>
                    </span>
                  </label>
                  <label class='block clearfix'>
                    <span class='block input-icon input-icon-right'>
                      <%= f.password_field :password_confirmation, class: 'form-control' %>
                      <i class='ace-icon fa fa-lock'></i>
                    </span>
                  </label>
                  <div class='space'></div>
                  <div class='clearfix'>
                    <label class='inline'>
                      <input class='ace' type='checkbox'>
                      <span class='lbl'>Remember Me</span>
                    </label>
                  <%= f.submit 'Sign up', :class => 'button right' %>
                  <% end %>
                  </div>

                  <div class='space-4'></div>
                </fieldset>
              </form>
              <div class='space-6'></div>
            </div>
            <!-- /.widget-main -->

          </div>
          <!-- /.widget-body -->
        </div>
        <!-- /.login-box -->

        <!-- /.forgot-box -->
      </div>
    </div>
  </div>
</div>
