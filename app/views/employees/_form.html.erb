<div class = "row">
  <div class ="col-md-6 col-md-offset-3 form-horizontal">
<%= form_for @employee, html: {class: "form-horizontal"} do |f| %>
  <% if @employee.errors.team_member? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@employee.errors.count, "error")} prohibited this requirement from being saved:" %>
      </h2>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">First Name</label>
    <div class="col-sm-9">
    <input class="col-xs-10 col-sm-5" type="text" name="employee[emp_firstname]" id="employee_emp_firstname" class="col-xs col-sm-5" required>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Last Name</label>
    <div class="col-sm-9">
    <input class="col-xs-10 col-sm-5" type="text" name="employee[emp_lastname]" id="employee_emp_lastname" class="col-xs col-sm-5" required>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Employee ID</label>
    <div class="col-sm-9">
    <input class="col-xs-10 col-sm-5" type="text" name="employee[emp_id]" id="employee_emp_id" class="col-xs col-sm-5" required>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Designatiom</label>
    <div class="col-sm-9">
    <input class="col-xs-10 col-sm-5" type="text" name="employee[emp_designation]" id="employee_emp_designation" class="col-xs col-sm-5" required>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Email ID</label>
    <div class="col-sm-9">
    <input class="col-xs-10 col-sm-5" type="text" name="employee[emp_mail]" id="employee_emp_mail" class="col-xs col-sm-5" required>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Phone No</label>
    <div class="col-sm-9">
    <input class="col-xs-10 col-sm-5" type="text" name="employee[emp_phone]" id="employee_emp_phone" class="col-xs col-sm-5" required>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Skill</label>
    <div class="col-sm-9">
      <select name="employee[skill_id]" id="employee_skill_id" required>
          <option value="1">Front End</option>
          <option value="2">DBMS</option>
          <option value="4">Dot Net</option>
          <option value="5">Ruby On Rails</option>
        </select>
    </div>
  </div>


  <div class="actions">
    <%= f.submit 'Save' , class: "btn btn-primary" %>
  </div>

<% end %>
</div>
</div>
