<style>
.widget-box {
  padding: 30px;
  padding-left: 0px;
  padding-right: 0px;
  box-shadow: none;
  margin: 3px 0;

  border-radius: 5px;
  border-color: 1px solid #ddd;
  background-color: #f2f2f2;
}
.right{
  float: right;

}
.actions{padding-right: 200px;
  padding-bottom: 10px;}
  #candidate_resume{padding-right: 405px;
  }
</style>



<div class ="col-md-6 col-md-offset-3 form-horizontal">
  <div class = "widget-box">
    <%= form_for  [@requirement, @candidate] do |f| %>
    <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@candidate.errors.count, "error")} prohibited this candidate from being saved:" %>
      </h2>
      <ul>
        <% @candidate.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
      </ul>
    </div>
    <% end %>



    <div class="form-group">
      <label class="col-sm-3 control-label " for="form-field-1">First Name</label>
      <input type="text" id="form-field-1" placeholder="First Name" name="candidate[first_name]" class="col-xs col-sm-6" required>

    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label " for="form-field-1">Last Name</label>
      <input type="text" id="form-field-1" placeholder="Last Name" name="candidate[last_name]" class="col-xs col-sm-6" required>

    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label " for="form-field-1">Phone No</label>
      <input type="tel" id="form-field-1" placeholder="Phone No" name="candidate[contact]" class="col-xs col-sm-6" required>

    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label " for="form-field-1">Email</label>
      <input type="email" name="candidate[email]" placeholder="Email" id="candidate_email" class="col-xs col-sm-6" required>
    </div>


    <div  class="form-group">
      <label class="col-sm-3 control-label " for="form-field-1" style= "padding-top:0px">Candidate Resume</label>

      <%=f.file_field :resume%>
    </div>

    <div class="actions" >
      <%= f.submit 'Save' , class: "btn btn-primary right"%>
    </div>


    <center>
      <% end %>

      <%= link_to 'Back', requirements_path, class: "col-sm-3 control-label" %>

    </div>

  </div>
