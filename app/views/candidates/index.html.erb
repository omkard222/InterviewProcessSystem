<h1>Listing candidates</h1>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Resume</th>
      <th></th>
    

    </tr>
  </thead>
  <tbody>
    <%  @candidates.each do |candidate| %>
      <tr>
        <td>
          <%= candidate.first_name %>
        </td>
        <td>
          <%= candidate.last_name %>
        </td>
        <td>
          <%= candidate.contact %>
        </td>
        <td>
          <%= candidate.email %>
        </td>

         <td><%= link_to "Download Resume", candidate.resume_url %></td>

        <td><%= link_to "Schedule_Interview", new_requirement_candidate_scheduler_path(@requirement, candidate) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Candidate',  new_requirement_candidate_path %>
