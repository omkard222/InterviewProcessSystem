<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newrequirement">Add Requirement</button>


<%= link_to 'Back', dutables_path %>






<%= form_for @requirement, html: {class: "form-horizontal"}, remote:true do |f| %>
<div class="modal fade" id="newrequirement" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
 <div class="modal-dialog">
   <div class="modal-content">

     <div style="  background-color:#85929E;"class="modal-header">
      <center>  <h3 style="color:#F8F9F9;" class="modal-title">New Requirement</h3>
        <button style="color:#212F3D;"  type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span style="color:#212F3D;"  aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
      <form id="myform" action="/requirements/new" method= "post">
        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Opportunity Id </label>
          <div class="col-sm-9">
          <input class="col-xs-10 col-sm-5" type="text" name="requirement[opportunityID]" value="<%=@requirement.opportunityID%>" id="requirement_opportunityID" class="col-xs col-sm-5" required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Designation</label>
          <div class="col-sm-9">
            <input class="col-xs-10 col-sm-5" type="text" name="requirement[position]" value="<%=@requirement.position%>" id="requirement_position" class="col-xs col-sm-5" required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Job Description(Min 10 chars and Max 2000 chars)</label>
          <div class="col-sm-9">
            <textarea name="requirement[job_description]" minlength="10" maxlength="2000"  id="requirement_job_description" class="col-xs col-sm-5" required></textarea>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Job Summary(Min 10 chars and Max 500 chars)</label>
          <div class="col-sm-9">
            <textarea name="requirement[job_summary]" minlength="10" maxlength="500"  id="requirement_job_summary" class="col-xs col-sm-5" required></textarea>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Skills </label>
          <div class="col-sm-9">
            <select name="requirement[skills]" id="requirement_skills" value="<%=@requirement.skills%>" required>
              <option value="Java">Java</option>
              <option value="FE">Front End</option>
              <option value=".net">Dot Net</option>
              <option value="RubyOnRails">Ruby On Rails</option>

            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Experience(yrs)</label>
          <div class="col-sm-9">
            <%= f.select :experience, options_for_select(0..50) %>

          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Qualification </label>
          <div class="col-sm-9">
            <input class="col-xs-10 col-sm-5" type="text" name="requirement[qualification]" value="<%=@requirement.qualification%>" id="requirement_qualification" required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Status</label>
          <div class="col-sm-9">
            <select name="requirement[status]" id="requirement_status"  value="<%=@requirement.status%>" required>
              <option value="open">open</option>
              <option value="closed">Closed</option>
              <option value="hold">Hold</option>
            </select>
          </div>
        </div>


      </form>
    </div>
        <%= f.hidden_field :project_id, :value => @project.id, class:"req_hide"; %>
     <div class="modal-footer">
       <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       <button type="submit" id="dialog" name="commit" value="Save" id="save" class="btn btn-primary" data-disable-with="Save">Create</button>
     </div>

   </div>
 </div>
</div>
<%end%>

